#include <iostream>
#include "math.h"
using namespace std;

int main()
{
    float r, perimetro,area;
    const double pi=3.14159265358979323846;
    
    cout<<"Ingrese el radio de la circunferencia: ";
    cin>>r;
    
    perimetro=2*pi*r;
    area=pi*pow(r,2);
    
    cout<<"El perimetro es "<<perimetro<< " y el area es "<<area;
    return 0;
}
