#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    double X1,X2,a,b,c;
    cout<<"De la siguiente ecuacion: axÂ´2+by+c=0"<<endl;
    cout<<"Ingresar valor de a: ";
    cin>>a;
    cout<<"Ingresar el valor de b: ";
    cin>>b;
    cout<<"Ingresar el valor de c: ";
    cin>>c;
    X1=(-b+sqrt((b*b)-4*a*c))/(2*a);
    X2=(-b-sqrt((b*b)-4*a*c))/(2*a);
    cout<<"El valor de x1 es: "<<X1<<endl;
    cout<<"El valor de x2 es: "<<X2<<endl;

    return 0;
}
